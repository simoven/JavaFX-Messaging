<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<StackPane fx:id="thisRoot" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.ImageViewController">
   <children>
      <VBox fx:id="paneVBox">
         <children>
            <HBox prefHeight="60.0">
               <children>
                  <Button fx:id="closeButton" mnemonicParsing="false" onMouseClicked="#closePanel" prefHeight="30.0" text="Chiudi">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" top="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <ImageView fx:id="imageView" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </ImageView>
            <HBox>
               <children>
                  <Pane HBox.hgrow="ALWAYS" />
                  <Button fx:id="selectButton" mnemonicParsing="false" onMousePressed="#confirmThisImage" prefHeight="30.0" text="Seleziona">
                     <HBox.margin>
                        <Insets bottom="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</StackPane>
